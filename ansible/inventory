[aws]
# AWSへの接続情報を設定
aws_access_key = $AWS_ACCESS_KEY_ID
aws_secret_key = $AWS_SECRET_ACCESS_KEY
ec2_region = $AWS_DEFAULT_REGION  # インスタンスが存在するリージョンを指定

# タグを使用してインスタンスを特定
# "environment" タグが "production" のインスタンスを選択
# "ansible_ssh_private_key_file" はSSHキーファイルの場所を指定
# このファイルのパスを適切に設定してください

# グループ名とフィルタ条件
ansible_ssh_host = tag_Nmae_raisetech13
[ansible_ssh_host:vars]
ruby_version=3.1.2